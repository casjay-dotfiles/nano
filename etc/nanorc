#  Set options
set quotestr "^([ 	]*([!#%:;>|}]|//))+"
set matchbrackets "(<[{)>]}"
set brackets ""')>]}"
set constantshow
set emptyline
set historylog
set linenumbers
set magic
set positionlog
set showcursor
set smarthome
set speller "aspell -x -c"
set tabsize 4
set tabstospaces
set multibuffer

# Set global syntax
extendsyntax python tabgives "    "
extendsyntax makefile tabgives "	"

# Set key bindings
#unbind ^K main
