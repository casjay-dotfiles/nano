# Include nanorc files
include ~/.config/nano/inc/*

#  Set options
set quotestr "^([ 	]*([!#%:;>|}]|//))+"
set matchbrackets "(<[{)>]}"
set brackets ""')>]}"
set constantshow
set emptyline
set historylog
#set linenumbers
set magic
set positionlog
set showcursor
set smarthome
set speller "aspell -x -c"
set tabsize 4
set tabstospaces
set multibuffer

# Set global syntax
extendsyntax python tabgives "    "
extendsyntax Makefile tabgives "	"

# Set key bindings
#unbind ^K main
#unbind ^U all
#unbind ^N main
#unbind ^Y all
#unbind M-J main
#unbind M-T main
unbind ^H all
unbind ^G all
unbind F11 all

bind ^Q exit all
bind ^S savefile main
bind ^W writeout main
bind ^O insert main
bind ^H help all
bind ^H exit help
bind ^F whereis all
bind ^G findnext all
bind ^B wherewas all
bind ^D findprevious all
bind ^R replace main
bind ^X cut all
bind ^C copy main
bind ^V paste all
bind ^P location main
bind ^A mark main
bind ^L gotoline main
bind ^T gotodir browser
bind ^Y speller main
bind ^U undo main
bind ^E redo main

#bind M-U undo main
#bind M-R redo main
bind M-X flipnewbuffer all

